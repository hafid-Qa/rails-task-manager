<div data-controller="tasks" class="h-100 p-3 bg-light border rounded-3 my-3 shadow">
  <h1>My Task</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-start pe-1">
        <%= form_for(task) do |f| %>
          <%= f.check_box :completed ,data: {
                         id: task.id,
                         action: "tasks#toggle"
                       }, class:"form-check-input me-1"%>
        <% end %>
        <%= link_to task.title, task_path(task), class: "ms-1 task-link flex-grow-1" %>
        <%= link_to "Edit", edit_task_path(task), class: "btn btn-outline-success btn-sm me-2" %>
        <%= button_to 'Delete', task, method: :delete,data: { turbo_confirm: 'Are you sure?' } , class: "btn btn-outline-danger btn-sm "%>
      </li>
    <% end %>
  </ul>
</div>
<%= link_to "New task", new_task_path, class: "btn btn-gradient" %>
